<Window x:Class="TimeKeeperEditor.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TimeKeeperEditor.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" SizeToContent="Height"
        Title="Time Keeping Editor" Height="705" Width="943">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Margin="4,8,4,8">Employee</Label>
            <ComboBox Margin="4,8,4,8" 
                      ItemsSource="{Binding Employees, Mode=TwoWay}"
                      SelectedItem="{Binding SelectedEmployee}"
                      Width="300"/>
            <Button FontSize="10" Command="{Binding ClearEmployeeCommand}">Clear</Button>
            <Label Margin="32,8,4,8">Log Date</Label>
            <DatePicker SelectedDate="{Binding SelectedLogDate}"
                        Margin="4,8,4,8" 
                        Width="180" SelectedDateFormat="Long" >
            </DatePicker>

        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- One row per field -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <!-- Column 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="8">
                    <Label Content="Log Ref No" />
                    <TextBox IsReadOnly="True"
             Text="{Binding CurrentLog.LogRefNo}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="8">
                    <Label Content="Log ID" />
                    <TextBox Text="{Binding CurrentLog.LogId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="8">
                    <Label Content="Log Method" />
                    <TextBox Text="{Binding CurrentLog.LogMethod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Margin="8">
                    <Label Content="Log Date" />
                    <DatePicker SelectedDate="{Binding CurrentLog.LogDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" Margin="8">
                    <Label Content="Log In AM" />
                    <TextBox Text="{Binding CurrentLog.LogInAM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" Margin="8">
                    <Label Content="Log Out AM" />
                    <TextBox Text="{Binding CurrentLog.LogOutAM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.Column="0" Margin="8">
                    <Label Content="Log In PM" />
                    <TextBox Text="{Binding CurrentLog.LogInPM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="7" Grid.Column="0" Margin="8">
                    <Label Content="Log Out PM" />
                    <TextBox Text="{Binding CurrentLog.LogOutPM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="8" Grid.Column="0" Margin="8">
                    <Label Content="PID" />
                    <TextBox Text="{Binding CurrentLog.PID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>


                <!-- Column 2 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8">
                    <Label Content="Sched In" />
                    <TextBox Text="{Binding CurrentLog.SchedIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8">
                    <Label Content="Sched Out" />
                    <TextBox Text="{Binding CurrentLog.SchedOut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Margin="8">
                    <Label Content="Date Posted" />
                    <DatePicker SelectedDate="{Binding CurrentLog.DatePosted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Margin="8">
                    <Label Content="Actual IN" />
                    <TextBox Text="{Binding CurrentLog.ActualIN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Margin="8">
                    <Label Content="Actual OUT" />
                    <TextBox Text="{Binding CurrentLog.ActualOUT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="1" Margin="8" Grid.RowSpan="3">
                    <Label Content="Remarks" />
                    <TextBox Text="{Binding CurrentLog.Remarks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             AcceptsReturn="True" TextWrapping="Wrap" />
                </StackPanel>




                <StackPanel Orientation="Horizontal" 
                            Grid.ColumnSpan="2" 
                            Grid.Row="9" 
                            HorizontalAlignment="Center" 
                            Margin="8">
                    <Button Command="{Binding GotoPreviousLogCommand}" Width="150" Margin="2">Previous</Button>
                    <Button Command="{Binding GotoNextLogCommand}" Width="150" Margin="2">Next</Button>
                    <Button Command="{Binding UpdateCommand}" 
                            Width="150" 
                            Margin="2">Save</Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
